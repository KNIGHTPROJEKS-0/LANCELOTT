rules_version = '2';

// Cloud Storage Security Rules for LANCELOTT
service firebase.storage {
  match /b/{bucket}/o {
    // User-specific uploads directory
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Scan reports directory (user-specific)
    match /reports/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.token.admin == true;
    }

    // Tool output files (user-specific)
    match /tool_outputs/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.token.admin == true;
    }

    // Temporary files (auto-cleanup after 24 hours)
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null &&
        request.auth.uid == userId &&
        request.time < resource.timeCreated + duration.value(24, 'h');
    }

    // Public assets (read-only for authenticated users)
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Configuration files (admin-only)
    match /config/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Logs directory (admin-only)
    match /logs/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Backup files (admin-only)
    match /backups/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // File size restrictions (max 100MB for regular files, 500MB for admin)
    match /{allPaths=**} {
      allow write: if request.auth != null &&
        (request.resource.size < 100 * 1024 * 1024 ||
         (request.auth.token.admin == true && request.resource.size < 500 * 1024 * 1024));
    }
  }
}
