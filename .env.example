# LANCELOTT Framework Configuration Template
# Project: LANCELOTT - Unified Security Tools API
# Version: 2.1.0
# Copy this file to .env and configure with your actual values

# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Application Settings
APP_NAME=LANCELOTT
APP_VERSION=2.1.0
APP_HOST=0.0.0.0
APP_PORT=7777
APP_SECRET_KEY=your-secret-key-change-in-production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database Configuration
DATABASE_URL=sqlite:///./lancelott.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/lancelott

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_ORIGINS=http://localhost:7777,http://127.0.0.1:7777

# ============================================================================
# AI INTEGRATION - API KEYS
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Ollama Configuration
OLLAMA=""

# Hugging Face Configuration
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
HF_TOKEN=your_huggingface_token_here

# ============================================================================
# AZURE AI FOUNDRY INTEGRATION
# ============================================================================

# Azure AI Foundry GPT-5 integration (primary)
FOUNDRY_GPT5_DEPLOYMENT_NAME=your-gpt5-deployment-name
FOUNDRY_GPT5_MODEL=gpt-5-chat
FOUNDRY_GPT5_ENDPOINT=https://your-resource.cognitiveservices.azure.com/openai/deployments/your-deployment/chat/completions?api-version=2025-01-01-preview
FOUNDRY_GPT5_API_KEY=your-azure-api-key-here

# Azure AI Foundry GPT-5 integration (secondary)
FOUNDRY_GPT5_NANO_DEPLOYMENT_NAME=your-gpt5-nano-deployment
FOUNDRY_GPT5_NANO_MODEL=gpt-5-nano
FOUNDRY_GPT5_NANO_ENDPOINT=https://your-resource.cognitiveservices.azure.com/openai/deployments/your-nano-deployment/chat/completions?api-version=2024-12-01-preview
FOUNDRY_GPT5_NANO_API_KEY=your-azure-api-key-here

# Azure Configuration
AZURE_AI_FOUNDRY_PROJECT_ENDPOINT=https://your-resource.services.ai.azure.com/api/projects/your-project
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_AI_SERVICES_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_PROJECT_RESOURCES_ID=/subscriptions/your-subscription-id/resourceGroups/your-resource-group/providers/Microsoft.CognitiveServices/accounts/your-account/projects/your-project
AZURE_LOCATION=eastus2
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_SUBSCRIPTION=your-subscription-name
AZURE_RESOURCE_GROUP=your-resource-group
AZD_ALLOW_NON_EMPTY_FOLDER=true

# Azure Authentication (Optional for SDK/CLI)
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id
AZURE_USERNAME=your-username
AZURE_PASSWORD=your-password

# Azure API Configuration
AZURE_API_KEY=your-azure-api-key
AZURE_API_BASE=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2024-12-01-preview

# ============================================================================
# FIREBASE INTEGRATION
# ============================================================================

# Firebase Project Configuration
FIREBASE_PROJECT_NAME=your-project-name
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PROJECT_NUMBER=your-project-number
FIREBASE_WEB_API_KEY=your-web-api-key
FIREBASE_ENVIRONMENT_TYPE=Production

# Firebase App Configuration
FIREBASE_APP_NICKNAME=your-app-nickname
FIREBASE_APP_ID=your-app-id

# Firebase Web Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your-sender-id

# Firebase Services
FIREBASE_WEB_PUSH_CERTIFICATES_KEY_PAIR=your-web-push-key
FIREBASE_DASHBOARD_URL=https://your-firebase-hosting-url/

# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase/your-firebase-service-account.json
FIREBASE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# ============================================================================
# EXTERNAL SERVICES API KEYS
# ============================================================================

# Docker Configuration
DOCKER_API_URL=https://api.docker.com/v2/
DOCKER_USERNAME=your-docker-username
DOCKER_API_TOKEN=your-docker-token-here

# GitHub API Configuration
GITHUB_API_TOKEN=your-github-token-here
GITHUB_API_URL=https://api.github.com

# ============================================================================
# LANCELOTT FRAMEWORK CONFIGURATION
# ============================================================================

# Tool Configuration
TOOL_TIMEOUT=300
MAX_CONCURRENT_TOOLS=5
TOOL_OUTPUT_DIR=./reports
TOOL_LOG_DIR=./logs

# File Upload Configuration
MAX_UPLOAD_SIZE=104857600
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Scan Settings
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=3600

# N8N Workflow Automation
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=lancelott
N8N_BASIC_AUTH_PASSWORD=secure_password_change_me
WEBHOOK_URL=http://localhost:5678

# SuperGateway (MCP Protocol)
SUPERGATEWAY_PORT=3000
SUPERGATEWAY_HOST=localhost

# SuperCompat (AI Compatibility)
SUPERCOMPAT_PORT=3001
SUPERCOMPAT_HOST=localhost

# Crush Orchestrator
CRUSH_ENABLED=true
CRUSH_AUTO_START=false
CRUSH_CONFIG_PATH=config/crush.conf

# Monitoring and Logging
ENABLE_MONITORING=true
MONITORING_INTERVAL=30
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# Docker Configuration
COMPOSE_PROJECT_NAME=lancelott
DOCKER_NETWORK=lancelott-network

# Development Settings
HOT_RELOAD=true
AUTO_RESTART=true
SHOW_SQL_QUERIES=false

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================

# Terminal Configuration
PROMPT_TOOLKIT_NO_CPR=1

# AI Model Configuration
CAI_STREAM=true
CAI_MODEL=azure/your-model-deployment

# ============================================================================
# SECURITY TOOL PATHS (auto-detected by default)
# ============================================================================

# Tool Paths - Uncomment and configure if needed
# NMAP_PATH=/opt/homebrew/bin/nmap
# ARGUS_PATH=./tools/Argus
# KRAKEN_PATH=./tools/Kraken
# METABIGOR_PATH=./tools/Metabigor
# DISMAP_PATH=./tools/dismap
# OSMEDEUS_PATH=./tools/Osmedeus
# SPIDERFOOT_PATH=./tools/Spiderfoot
# SOCIAL_ANALYZER_PATH=./tools/Social-Analyzer
# STORM_BREAKER_PATH=./tools/Storm-Breaker
# PHONESPLOIT_PATH=./tools/PhoneSploit-Pro
# VAJRA_PATH=./tools/Vajra
# REDTEAM_TOOLKIT_PATH=./tools/RedTeam_ToolKit
# FEROXBUSTER_PATH=./tools/feroxbuster
# NUCLEI_PATH=./tools/nuclei

# Target Configuration
LANCELOTT_ROOT=/path/to/LANCELOTT
TARGET_DOMAIN=example.com
TARGET_IP=192.168.1.1
WORDLIST_PATH=./tools/Kraken/wordlists/

# ============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# ============================================================================

# ENVIRONMENT=production
# DEBUG=false
# APP_SECRET_KEY=generate-a-secure-random-key-for-production
# JWT_SECRET_KEY=generate-a-secure-jwt-key-for-production
# DATABASE_URL=postgresql://user:pass@localhost:5432/lancelott_prod
# ALLOWED_ORIGINS=https://yourdomain.com
# HTTPS_ONLY=true
# N8N_BASIC_AUTH_PASSWORD=very-secure-production-password

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
