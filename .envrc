#!/bin/bash
# This script runs the obfuscation script automatically when the project folder is opened in a new shell session.
# It should be sourced from .envrc or .bashrc/.zshrc if present in the project root.

PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]:-${(%):-%N}}")" && pwd)"
OBFUSCATE_SCRIPT="$PROJECT_ROOT/obfuscate_all.sh"

if [ -f "$OBFUSCATE_SCRIPT" ]; then
    echo "[Auto] Running obfuscation/protection script..."
    bash "$OBFUSCATE_SCRIPT"
fi
